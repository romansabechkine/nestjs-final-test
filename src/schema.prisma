generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_NEST_JS_FINAL_TEST_DB")
  //url = env("DATABASE_URL")
}

model Task {
  taskId   String   @id @default(cuid()) 
  name     String
  priority Int
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)  
  userId String 
}

model User {
  id  String      @id @default(cuid())
  email String    @unique
  tasks Task[]    
}
